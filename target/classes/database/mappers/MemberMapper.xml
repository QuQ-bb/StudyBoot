<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.iu.home.member.MemberMapper">

	<insert id="setJoin" parameterType="MemberVO">
		INSERT INTO MEMBER
		VALUES(
		#{id},
		#{pw},
		#{name},
		#{email},
		1)
	</insert>
	<insert id="setRole" parameterType="memberVO">
		INSERT INTO MEMBER_ROLE
		VALUES(
			#{id},
			3
		)
		
		INSERT INTO MEMBER_ROLE
		VALUES(#{id}, 
		(SELECT * FROM ROLE WHERE roleName = ''))
	</insert>
	
	<select id="getLogin" parameterType="MemberVO" resultMap="getLoginResult">
		SELECT M.*,R.*
		FROM MEMBER M
			JOIN
			MEMBER_ROLE MR
			ON M.ID=MR.ID
			JOIN
			ROLE R
			ON MR.NUM=R.NUM
		WHERE M.ID=#{id} AND M.PW=#{pw}	
	</select>
	<resultMap type="MemberVO" id="getLoginResult">
		<id column="id" property="id"/>
		<result column="name" property="name"/> 
		<result column="email" property="email"/> 
		<collection property="roleVOs" javaType="List" ofType="RoleVO">
			<id column="num" property="num"/>
			<result column="roleName" property="roleName"/>
		</collection>
	</resultMap>
	


</mapper>	